<Window x:Class="StarFoxMapVisualizer.Controls.Subcontrols.BPPDepthMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StarFoxMapVisualizer.Controls.Subcontrols"
             mc:Ignorable="d" Name="HOST"
             Width="250" Title="OPEN FILE" Foreground="White" SizeToContent="Height"
             WindowStartupLocation="CenterOwner" Style="{StaticResource SFDialogModalMenuStyle}" Background="#FF118E00">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" TextWrapping="Wrap" Margin="0,0,0,10">You're opening a *.CGX file, how many bits per pixel? <LineBreak/>(Default is 4BPP)</TextBlock>
        <Menu Name="TypeMenu">
            <MenuItem x:Name="CancelItem" Header="Cancel" Click="CancelItem_Click"></MenuItem>
        </Menu>
    </DockPanel>
</Window>
