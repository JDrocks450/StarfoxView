<Image x:Class="StarFoxMapVisualizer.Controls.Subcontrols.CopyableImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StarFoxMapVisualizer.Controls.Subcontrols"
             mc:Ignorable="d" RenderOptions.BitmapScalingMode="NearestNeighbor">
    <Image.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Copy as Image" Name="CopyItem" Click="CopyImage_Click"/>
            <MenuItem Header="Export as Image" Name="ExportItem" Click="ExportItem_Click"/>
        </ContextMenu>
    </Image.ContextMenu>
</Image>
