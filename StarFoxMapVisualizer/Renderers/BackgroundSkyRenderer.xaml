<renderers:SCRRendererControlBase xmlns:renderers="clr-namespace:StarFoxMapVisualizer.Renderers" x:Class="StarFoxMapVisualizer.Renderers.BackgroundSkyRenderer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StarFoxMapVisualizer.Renderers"
             mc:Ignorable="d" RenderOptions.BitmapScalingMode="NearestNeighbor" SnapsToDevicePixels="True"
             d:DesignHeight="800" d:DesignWidth="800">
    <Viewbox Stretch="UniformToFill">
        <Rectangle Width="224" Height="192">
            <Rectangle.Fill>
                <ImageBrush x:Name="BackgroundBrush" 
                            Viewbox="0,0,224,192" ViewboxUnits="Absolute" AlignmentX="Left" AlignmentY="Top"
                            Viewport="0,0,512,512" Stretch="None" ViewportUnits="Absolute"
                            TileMode="FlipY"/>
            </Rectangle.Fill>
        </Rectangle>
    </Viewbox>
</renderers:SCRRendererControlBase>
